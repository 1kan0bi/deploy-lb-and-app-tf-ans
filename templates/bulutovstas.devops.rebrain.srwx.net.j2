{% for port in ports %}
server {
        listen {{port}} default_server;
        listen [::]:{{ port }} default_server;

        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;

        server_name {{ ansible_host }};

        location / {
                try_files $uri $uri/ =404;
        }
}
{% endfor %}
